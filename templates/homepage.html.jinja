                                d="M9.854 8.854l.353-.354-.707-.707-.354.353.708.708zM7.5 10.5l-.354.354.354.353.354-.353L7.5 10.5zM5.854 8.146L5.5 7.793l-.707.707.353.354.708-.708zm3.292 0l-2 2 .708.708 2-2-.708-.708zm-1.292 2l-2-2-.708.708 2 2 .708-.708zM8 10.5V4H7v6.5h1z"
                                fill="currentColor"></path>
                        </svg></p>

                    {%endif%}
                </div>
            </div>
        </div>

        <div class="b-example-divider py-5"></div>
        <p>
        </p>
        {%if current_user.is_authenticated%}

        {%else%}

        <div class="row">
            <div class="col-4">
                <img class="border border-warning img-fluid" src="static/images/previewbrowse.png">
                <p>
                </p>
                <p class="text-center">Search through the plethera of colleges available,<br> to find what fits you and
                    what is available to you.</p>
            </div>
            <div class="col-4">
                <img class="border border-warning img-fluid" src="static/images/previewparameters.png">
                <p>
                </p>
                <p class="text-center">Enter information to easily find colleges that fit to your <br>preferences and,
                    later add to a list of choices.</p>
            </div>
            <div class="col-4">
                <img class="border border-warning img-fluid" src="static/images/previewanalystics.png">
                <p>
                </p>
                <p class="text-center">From the list you added your colleges you're able to see <br>if you reached the
                    academic requirments.</p>
            </div>
        </div>


        <div class="b-example-divider py-5"></div>


        <div class="container col-6 my-5" id="sign_up">
            <main class="form-signin w-100 m-auto">
                <form action="/sign_up" method="post" class="">
                    <h1 class="h3 mb-4 fw-bold text-center custom-txt">Please Sign Up</h1>

                    {% for message in get_flashed_messages() %}
                    <div class="alert alert-primary" role="alert">
                        {{ message }}
                    </div>
                    {% endfor%}

                    <div class="form-floating my-3">
                        <input type="text" name="username" class="form-control" id="floatingInput1"
                            placeholder="JohnDoe123" required>
                        <label for="floatingInput">Username</label>
                    </div>

                    <div class="form-floating my-3">
                        <input type="password" name="password" class="form-control" id="floatingPassword"
                            placeholder="password" required>
                        <label for="floatingPassword">Password</label>
                        <button type="button" id="togglePassword" class="btn btn-outline-warning">
                            Show Password
                        </button>
                    </div>

                    <div class="form-floating my-3">
                        <input type="password" name="confirm_password" class="form-control" id="floatingPassword2"
                            placeholder="password" required>
                        <label for="floatingPassword">Re-Enter Password</label>
                        <button type="button" id="toggleRePassword" class="btn btn-outline-warning">
                            Show Password
                        </button>
                    </div>

                    <div class="d-flex justify-content-center">

                        <div class="form-floating mx-1 my-3 col-6">
                            <input type="text" name="first_name" class="form-control" id="floatingInput2"
                                placeholder="John" required>
                            <label for="floatingInput">First Name</label>
                        </div>

                        <div class="form-floating mx-1 my-3 col-6">
                            <input type="text" name="last_name" class="form-control" id="floatingInput3"
                                placeholder="Doe" required>
                            <label for="floatingInput">Last Name</label>
                        </div>

                    </div>

                    <div class="d-flex justify-content-center">

                        <div class="form-floating mx-1 my-3 col-8">
                            <input type="email" name="email" class="form-control" id="floatingInput4"
                                placeholder="name@example.com" required>
                            <label for="floatingInput">Email Address</label>
                        </div>

                        <div class="form-floating mx-1 my-3 col-4">
                            <input type="number" name="zip_code" class="form-control" id="floatingInput5"
                                placeholder="12345" required>
                            <label for="floatingInput">Zip Code</label>
                        </div>

                    </div>



                    <div class="form-check text-start my-3">
                        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Remember me
                        </label>
                    </div>

                    <button class="btn btn-outline-warning w-100 py-2" type="submit">Sign up</button>
            </main>
            {%endif%}
        </div>
    </main>

